---
const { story } = Astro.props;
const floatClass = story.imageFloat === "right" ? "right" : "left";
---

<article class="story">
  <h2>{story.title}</h2>

  <div class="content">
    {story.imageUrl && (
      <img src={story.imageUrl} class={floatClass} alt="" />
    )}
    <p>{story.summary}</p>
  </div>

  {story.pageRef && <div class="page-ref">â€” {story.pageRef}</div>}
</article>

<style>
.story {
  font-size: 14px;
}

.story h2 {
  font-size: 18px;
  margin: 4px 0 8px;
}

.story img {
  width: 150px;
  height: 100px;
  object-fit: cover;
  border: 1px solid var(--rule);
  margin: 2px 10px 6px 0;
}

.story img.right {
  float: right;
  margin: 2px 0 6px 10px;
}

.story img.left {
  float: left;
}

.story .content::after {
  content: "";
  display: block;
  clear: both;
}

.page-ref {
  font-size: 10px;
  color: var(--muted);
  margin-top: 6px;
}
</style>
